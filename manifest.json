{
    "manifest_version": 2,
    "name": "SpeakGPT",
    "description": "A Chrome extension that speaks chatGPT output using an AI model.",
    "version": "1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "SpeakGPT Controls"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}